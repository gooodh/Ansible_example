[Unit]
Description=Python Uvicorn Application
After=network.target

[Service]
User={{ ansible_user }}
Group={{ ansible_user }}
WorkingDirectory={{ project_path }}
EnvironmentFile={{ project_path }}/.env
ExecStart={{ project_path }}/venv/bin/uvicorn bot.main:app --host 0.0.0.0 --port 8082

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
